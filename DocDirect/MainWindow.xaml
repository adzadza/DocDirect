<Window 
    x:Class="DocDirect.MainWindow"
    xmlns:local="clr-namespace:DocDirect"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="DocDirect" 
    Height="500" Width="650"
    MinHeight="600" MinWidth="800"    
    Style="{StaticResource MetroWindowStyle}"
    WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Grid DockPanel.Dock="Top" 
              ShowGridLines="True" 
              TextOptions.TextRenderingMode="ClearType"                                                        
              TextOptions.TextFormattingMode="Display">
            <Grid.RowDefinitions>
                <RowDefinition MaxHeight="24"></RowDefinition>
                <RowDefinition MaxHeight="30"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="26"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <Rectangle  Grid.Row="0" Grid.RowSpan="2"
                        Height="54"
                        Width="14"
                        Fill="Blue"
                        HorizontalAlignment="Left"
                        />
            <Button Name="btnGoBackPage" 
                    Grid.Row="0" 
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Style="{StaticResource BackButtonStyle}"/>
            <Label Name="labelHome" FontFamily="Candara"
                   Content="HOME" 
                   Grid.Row="1"
                   Grid.Column="1"
                   FontSize="18"/>
            <Label Name="labelHistiry" FontFamily="Candara"
                   Content="HISTORY" 
                   Grid.Row="1"
                   Grid.Column="2"
                   FontSize="18"/>
            
            <TextBox Grid.Row="0" Grid.RowSpan="2"
                     Grid.Column="3"
                     x:Name='tbSearch'
                     Margin="10 10 40 10"
                     Style="{StaticResource TextBoxIconSearchStyle}"/>           
            
        </Grid>
        <Frame Name="HomeFrame"  
               DockPanel.Dock="Top" 
               Padding="10 10 10 10"/>
        <StatusBar
            DockPanel.Dock="Bottom"
            Height="24">
            <TextBlock Margin="3,0,0,0">Ready</TextBlock>
            <StatusBarItem HorizontalAlignment="Right">
                <ResizeGrip Opacity="0.75" />
            </StatusBarItem>
        </StatusBar>
        
    </DockPanel>
</Window>
